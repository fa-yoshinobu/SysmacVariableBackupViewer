<Window x:Class="SysmacXmlViewer.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About SysmacVariableBackupViewer" Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        FontFamily="Yu Gothic UI, Meiryo, Microsoft YaHei, SimSun, sans-serif">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- アプリケーション情報 -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBlock Text="SysmacVariableBackupViewer" 
                       FontSize="24" FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#2E2E2E" Margin="0,0,0,10"/>
            <TextBlock Text="Version 1.0.3" 
                       FontSize="16" 
                       HorizontalAlignment="Center" 
                       Foreground="#4A4A4A" Margin="0,0,0,5"/>
            <TextBlock Text="Sysmac Studio XML Variable Backup Viewer" 
                       FontSize="12" 
                       HorizontalAlignment="Center" 
                       Foreground="#666666" Margin="0,0,0,10"/>
            <TextBlock Text="© 2025 All rights reserved." 
                       FontSize="10" 
                       HorizontalAlignment="Center" 
                       Foreground="#888888" Margin="0,0,0,5"/>
            <TextBlock Text="Author: fa-yoshinobu" 
                       FontSize="10" 
                       HorizontalAlignment="Center" 
                       Foreground="#888888" Margin="0,0,0,5"/>
                         <TextBlock FontSize="10" 
                        HorizontalAlignment="Center" 
                        Foreground="#888888" Margin="0,0,0,0">
                 <TextBlock.Inlines>
                     <Run Text="GitHub: " Foreground="#888888"/>
                     <Hyperlink NavigateUri="{Binding GitHubUrl, Mode=OneWay}" 
                                RequestNavigate="Hyperlink_RequestNavigate"
                                Foreground="#0066CC" 
                                TextDecorations="Underline">
                         <Run Text="{Binding GitHubUrl, Mode=OneWay}"/>
                     </Hyperlink>
                 </TextBlock.Inlines>
             </TextBlock>
        </StackPanel>
        
        <!-- タブコントロール -->
        <TabControl Grid.Row="2" Margin="0,10,0,10">
            <!-- アプリケーション情報タブ -->
            <TabItem Header="Application Info">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="System Information" Margin="0,0,0,10">
                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Target Framework:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text=".NET 6.0 Windows" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Runtime:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding RuntimeVersion}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="OS Version:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding OSVersion}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Architecture:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Architecture}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Build Date:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding BuildDate}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Assembly Version:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding AssemblyVersion}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="6" Grid.Column="0" Text="Product Name:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding ProductName}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="7" Grid.Column="0" Text="Product Version:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding ProductVersion}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="8" Grid.Column="0" Text="Company:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding CompanyName}" Margin="10,2"/>
                                
                                <TextBlock Grid.Row="9" Grid.Column="0" Text="Copyright:" FontWeight="Bold" Margin="0,2"/>
                                <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding Copyright}" Margin="10,2"/>
                            </Grid>
                        </GroupBox>
                        
                        <GroupBox Header="Features" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="• XML backup file parsing and viewing" Margin="0,2"/>
                                <TextBlock Text="• Variable data type conversion and display" Margin="0,2"/>
                                <TextBlock Text="• Advanced filtering and search capabilities" Margin="0,2"/>
                                <TextBlock Text="• CSV export functionality" Margin="0,2"/>
                                <TextBlock Text="• High-performance data handling" Margin="0,2"/>
                                <TextBlock Text="• Multi-language support" Margin="0,2"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ライブラリ情報タブ -->
            <TabItem Header="Libraries">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Dependencies" Margin="0,0,0,10">
                            <DataGrid ItemsSource="{Binding Libraries}" 
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False"
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      AlternatingRowBackground="#F9F9F9"
                                      Height="200">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Library" Binding="{Binding Name}" Width="250"/>
                                    <DataGridTextColumn Header="Version" Binding="{Binding Version}" Width="100"/>
                                    <DataGridTextColumn Header="License" Binding="{Binding License}" Width="150"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </GroupBox>
                        
                        <GroupBox Header="Third Party Licenses" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <TextBlock Text="This application uses the following third-party libraries:" 
                                           FontWeight="Bold" Margin="0,0,0,10"/>
                                
                                <Expander Header="System.Text.Encoding.CodePages (MIT License)" Margin="0,5">
                                    <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding CodePagesLicense}" 
                                                   TextWrapping="Wrap" 
                                                   FontFamily="Consolas, Courier New, monospace"
                                                   FontSize="10"/>
                                    </ScrollViewer>
                                </Expander>
                                
                                <Expander Header=".NET 6.0 Runtime (MIT License)" Margin="0,5">
                                    <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto">
                                        <TextBlock Text="{Binding DotNetLicense}" 
                                                   TextWrapping="Wrap" 
                                                   FontFamily="Consolas, Courier New, monospace"
                                                   FontSize="10"/>
                                    </ScrollViewer>
                                </Expander>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- ライセンスタブ -->
            <TabItem Header="License">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <GroupBox Header="Application License" Margin="0,0,0,10">
                            <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                                <TextBlock Text="{Binding ApplicationLicense}" 
                                           TextWrapping="Wrap" 
                                           FontFamily="Consolas, Courier New, monospace"
                                           FontSize="10"/>
                            </ScrollViewer>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- ボタン -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="OK" Width="80" Height="30" Click="OkButton_Click" 
                    Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
